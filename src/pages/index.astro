---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const features = [
	{
		icon: 'wifi',
		title: 'Gestion hors ligne',
		description: 'Gérez votre stock même sans connexion Internet. Vos données sont toujours disponibles quand vous en avez besoin.',
	},
	{
		icon: 'clipboard',
		title: 'Modèle de la Confédération suisse',
		description: 'Basé sur les recommandations officielles de la Confédération suisse pour une préparation optimale aux situations d\'urgence.',
	},
	{
		icon: 'sliders',
		title: 'Personnalisation complète',
		description: 'Adaptez votre stock d\'urgence à vos besoins spécifiques avec des catégories et des articles personnalisables.',
	},
	{
		icon: 'cart',
		title: 'Raccourcis vers les boutiques en ligne',
		description: 'Accédez rapidement aux boutiques en ligne pour reconstituer vos fournitures grâce aux raccourcis d\'achat intégrés.',
	},
	{
		icon: 'print',
		title: 'Impression de liste d\'achats',
		description: 'Générez et imprimez des listes d\'achats pour suivre facilement ce que vous devez acheter pour votre stock d\'urgence.',
	},
	{
		icon: 'calendar',
		title: 'Gestion des dates d\'expiration',
		description: 'Gérez facilement les dates d\'expiration des produits en un seul clic pour garantir la fraîcheur de vos stocks.',
	},
];
---

<!doctype html>
<html lang="fr">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />

		<section class="hero" id="download">
			<div class="container">
				<div class="hero-content">
					<img src="/PrepPal.png" alt="PrepPal Logo" class="hero-logo" />
					<h1>Gérez efficacement votre stock d'urgence</h1>
					<p>PrepPal vous aide à vous préparer aux situations d'urgence grâce à une gestion intelligente des stocks basée sur les recommandations de la Confédération suisse.</p>
					<div class="btn-group">
						<a href="https://github.com/preppal-io/prep-pal/releases" target="_blank" class="btn btn-primary">Télécharger</a>
						<a href="/app" class="btn btn-secondary">Essayer en ligne</a>
					</div>
				</div>
			</div>
		</section>

		<section id="features" class="features">
			<div class="container">
				<div class="section-title">
					<h2>Des fonctionnalités qui facilitent la préparation</h2>
					<p>PrepPal est doté de tout ce dont vous avez besoin pour gérer efficacement vos fournitures d'urgence.</p>
				</div>
				<div class="features-grid">
					{features.map((feature) => (
						<div class="feature-card">
							<div class="feature-icon">
								{feature.icon === 'wifi' && (
									<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12.55a11 11 0 0 1 14.08 0"></path><path d="M1.42 9a16 16 0 0 1 21.16 0"></path><path d="M8.53 16.11a6 6 0 0 1 6.95 0"></path><line x1="12" y1="20" x2="12.01" y2="20"></line></svg>
								)}
								{feature.icon === 'clipboard' && (
									<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2"></path><rect x="8" y="2" width="8" height="4" rx="1" ry="1"></rect><path d="M9 14l2 2 4-4"></path></svg>
								)}
								{feature.icon === 'sliders' && (
									<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="4" y1="21" x2="4" y2="14"></line><line x1="4" y1="10" x2="4" y2="3"></line><line x1="12" y1="21" x2="12" y2="12"></line><line x1="12" y1="8" x2="12" y2="3"></line><line x1="20" y1="21" x2="20" y2="16"></line><line x1="20" y1="12" x2="20" y2="3"></line><line x1="1" y1="14" x2="7" y2="14"></line><line x1="9" y1="8" x2="15" y2="8"></line><line x1="17" y1="16" x2="23" y2="16"></line></svg>
								)}
								{feature.icon === 'cart' && (
									<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="9" cy="21" r="1"></circle><circle cx="20" cy="21" r="1"></circle><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path></svg>
								)}
								{feature.icon === 'print' && (
									<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 9 6 2 18 2 18 9"></polyline><path d="M6 18H4a2 2 0 0 1-2-2v-5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-2"></path><rect x="6" y="14" width="12" height="8"></rect></svg>
								)}
								{feature.icon === 'calendar' && (
									<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line><path d="M9 16l2 2 4-4"></path></svg>
								)}
							</div>
							<h3>{feature.title}</h3>
							<p>{feature.description}</p>
						</div>
					))}
				</div>
			</div>
		</section>

		<Footer />
	</body>
</html>

<style>
	.hero {
		padding: 150px 0 100px;
		background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
		text-align: center;
	}

	.hero-content {
		max-width: 800px;
		margin: 0 auto;
	}

	.hero-logo {
		max-width: 200px;
		margin-bottom: 30px;
	}

	.hero h1 {
		font-size: 3rem;
		font-weight: 700;
		margin-bottom: 20px;
		color: var(--dark-color);
	}

	.hero p {
		font-size: 1.25rem;
		color: var(--text-light);
		margin-bottom: 40px;
	}

	.btn-group {
		display: flex;
		justify-content: center;
		gap: 20px;
		flex-wrap: wrap;
	}

	.features {
		padding: 100px 0;
		background-color: #fff;
	}

	.section-title {
		text-align: center;
		margin-bottom: 60px;
	}

	.section-title h2 {
		font-size: 2.25rem;
		font-weight: 700;
		color: var(--dark-color);
		margin-bottom: 15px;
	}

	.section-title p {
		font-size: 1.125rem;
		color: var(--text-light);
		max-width: 600px;
		margin: 0 auto;
	}

	.features-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 40px;
	}

	.feature-card {
		background-color: #fff;
		border-radius: 10px;
		padding: 30px;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
		transition: all 0.3s ease;
	}

	.feature-card:hover {
		transform: translateY(-10px);
		box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
	}

	.feature-icon {
		width: 60px;
		height: 60px;
		background-color: rgba(52, 152, 219, 0.1);
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		margin-bottom: 20px;
		color: var(--primary-color);
	}

	.feature-card h3 {
		font-size: 1.25rem;
		font-weight: 600;
		margin-bottom: 15px;
		color: var(--dark-color);
	}

	.feature-card p {
		color: var(--text-light);
		margin: 0;
		line-height: 1.6;
	}

	@media (max-width: 768px) {
		.hero {
			padding: 120px 0 80px;
		}

		.hero h1 {
			font-size: 2.25rem;
		}

		.hero p {
			font-size: 1.125rem;
		}

		.features-grid {
			grid-template-columns: 1fr;
		}
	}
</style>
