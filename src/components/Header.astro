---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<div class="container">
		<nav class="navbar">
			<a href="/" class="logo">
				<img src="/preppal-logo.png" alt="PrepPal Logo" />
				<span class="logo-text">{SITE_TITLE}</span>
			</a>
			<div class="nav-links">
				<HeaderLink href="/">Accueil</HeaderLink>
				<HeaderLink href="/#features">Fonctionnalit√©s</HeaderLink>
				<HeaderLink href="/blog">Blog</HeaderLink>
				<a href="https://github.com/preppal-io/prep-pal" target="_blank" class="github-link">
					<span class="sr-only">GitHub</span>
					<svg viewBox="0 0 16 16" aria-hidden="true" width="24" height="24">
						<path
							fill="currentColor"
							d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
						></path>
					</svg>
				</a>
			</div>
			<button class="mobile-menu-btn" aria-label="Menu">
				<svg viewBox="0 0 24 24" width="24" height="24">
					<path fill="currentColor" d="M3 18h18v-2H3v2zm0-5h18v-2H3v2zm0-7v2h18V6H3z"></path>
				</svg>
			</button>
		</nav>
	</div>
</header>

<style>
	header {
		background-color: #fff;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
		position: fixed;
		width: 100%;
		top: 0;
		z-index: 1000;
	}

	.container {
		width: 100%;
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 20px;
	}

	.navbar {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 15px 0;
	}

	.logo {
		display: flex;
		align-items: center;
		text-decoration: none;
	}

	.logo img {
		height: 40px;
		margin-right: 10px;
	}

	.logo-text {
		font-size: 24px;
		font-weight: 700;
		color: var(--dark-color);
	}

	.nav-links {
		display: flex;
		gap: 30px;
		align-items: center;
	}

	.nav-links :global(a) {
		text-decoration: none;
		color: var(--text-color);
		font-weight: 500;
		transition: var(--transition);
		padding: 0.5em 0;
		border-bottom: none;
	}

	.nav-links :global(a:hover) {
		color: var(--primary-color);
	}

	.nav-links :global(a.active) {
		color: var(--primary-color);
	}

	.github-link {
		display: flex;
		align-items: center;
		color: var(--text-color);
	}

	.github-link:hover {
		color: var(--primary-color);
	}

	.mobile-menu-btn {
		display: none;
		background: none;
		border: none;
		cursor: pointer;
		color: var(--dark-color);
	}

	@media (max-width: 768px) {
		.nav-links {
			display: none;
		}

		.mobile-menu-btn {
			display: block;
		}
	}
</style>
